server {
  listen      [::]:80;
  listen      80;
  server_name ticketline-api.dev2.koda.ws;
  access_log  /var/log/nginx/ticketline-api-access.log;
  error_log   /var/log/nginx/ticketline-api-error.log;

  include /home/dokku/ticketline-api/nginx.conf.d/*.conf;
  location / {
    return 301 https://$host:443$request_uri;
  }

  location /api{
    try_files $uri $uri/ /index.php?$query_string;
  }

}
